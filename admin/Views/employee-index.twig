{% extends 'layouts/main.twig' %}

{% block content %}
    <div class="content-page">
        <div class="content">

            <!-- Start container-fluid -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div>
                            <h4 class="header-title mb-3">Danh sách Nhân Viên</h4>
                        </div>
                    </div>
                </div>
                <div id="selection-datatable" class="table table-striped table-bordered dt-responsive nowrap"
                     style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <div class="table-responsive">
                        <table class="table table-hover m-0">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Employee Name</th>
                                <th>Position</th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for employee in employees %}
                                <tr>
                                    <td>{{ employee.id }}</td>
                                    <td>{{ employee.employee_name }}</td>
                                    <td>{{ employee.position }}</td>
                                    <td>{{ employee.phone_number }}</td>
                                    <td>{{ employee.email }}</td>
                                    <td>
                                        <a href="/admin/employee/update/{{ employee.id }}" title="Chỉnh sửa"><i class="fa fa-pen"></i> </a>
                                        <form method="post" id="delete-form-{{ employee.id }}">
                                            <input type="hidden" value="{{ employee.id }}" name="id">
                                            <a href="#" title="Xóa {{ employee.id }}" onclick="document.getElementById('delete-form-{{ employee.id }}').submit();" ><i class="fa fa-trash"></i></a>
                                            <noscript>
                                                <input type="submit" value="Submit form!">
                                            </noscript>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <button> <a href="/admin/employee/create">Thêm Nhân Viên</a></button>
                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container-fluid -->

        </div>
        <!-- end content -->

    </div>
    <!-- END content-page -->
{% endblock %}