{% extends 'layouts/main.twig' %}

{% block content %}
    <div class="content-page">
        <div class="content">

            <!-- Start container-fluid -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div>
                            <h4 class="header-title mb-3">Danh sách Phòng</h4>
                        </div>
                    </div>
                </div>
                <div id="selection-datatable" class="table table-striped table-bordered dt-responsive nowrap"
                     style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Resort_ID</th>
                                <th>Room Type</th>
                                <th>Price Per Night</th>
                                <th>Availability</th>
                                <th>Max Occupancy</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for room in rooms %}
                                <tr>
                                    <td>{{ room.id }}</td>
                                    <td>{{ room.resort_id }}</td>
                                    <td>{{ room.room_type }}</td>
                                    <td>{{ room.price_per_night | number_format(0, ',', '.') }} VND</td>
                                    <td>{{ room.availability }}</td>
                                    <td>{{ room.max_occupancy }}</td>
                                    <td>
                                        <a href="/admin/room/view/{{ room.id }}" title="Xem chi tiết"><i class="fa fa-eye"></i> </a>
                                        <a href="/admin/room/update/{{ room.id }}" title="Chỉnh sửa"><i class="fa fa-pen"></i> </a>
                                        <form method="post" id="delete-form-{{ room.id }}">
                                            <input type="hidden" value="{{ room.id }}" name="id">
                                            <a href="#" title="Xóa {{ room.id }}" onclick="document.getElementById('delete-form-{{ room.id }}').submit();" ><i class="fa fa-trash"></i></a>
                                            <noscript>
                                                <input type="submit" value="Submit form!">
                                            </noscript>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a href="/admin/room/create" class="btn btn-success">Thêm phòng mới</a>
                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container-fluid -->

        </div>
        <!-- end content -->
        <script>
            window.alert = function () {};
        </script>
    </div>
    <!-- END content-page -->

{% endblock %}