{% extends 'layouts/main.twig' %}

{% block content %}
    <div class="content-page">
        <div class="content">

            <!-- Start container-fluid -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div>
                            <h4 class="header-title mb-3">Danh sách Tài Khoản</h4>
                        </div>
                    </div>
                </div>
                <div id="selection-datatable" class="table table-striped table-bordered dt-responsive nowrap"
                     style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Password</th>
                                <th>Flag</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for account in accounts %}
                                <tr>
                                    <td>{{ account.id }}</td>
                                    <td>{{ account.name }}</td>
                                    <td>{{ account.phone_number }}</td>
                                    <td>{{ account.email }}</td>
                                    <td>{{ account.address }}</td>
                                    <td>{{ account.password }}</td>
                                    <td>{{ account.flag == 1 ? 'Customer' : 'Admin' }}</td>
                                    <td>
                                        <a href="/admin/account/update/{{ account.id }}" title="Chỉnh sửa"><i class="fa fa-pen"></i> </a>
                                        <form method="post" id="delete-form-{{ account.id }}">
                                            <input type="hidden" value="{{ account.id }}" name="id">
                                            <a href="#" title="Xóa {{ account.id }}" onclick="document.getElementById('delete-form-{{ account.id }}').submit();" ><i class="fa fa-trash"></i></a>
                                            <noscript>
                                                <input type="submit" value="Submit form!">
                                            </noscript>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a href="/admin/account/create" class="btn btn-success">Thêm Tài Khoản</a>
                    </div>

                </div>
                <!-- end row -->
            </div>
            <!-- end container-fluid -->

        </div>
        <!-- end content -->
        <script>
            window.alert = function () {};
        </script>

    </div>
    <!-- END content-page -->
{% endblock %}