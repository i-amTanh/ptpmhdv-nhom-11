{% extends 'layouts/main.twig' %}

{% block content %}
    <div class="content-page">
        <div class="content">

            <!-- Start container-fluid -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div>
                            <h4 class="header-title mb-3">Sửa Thông Tin Đặt Phòng</h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <form method="post" class="form-horizontal">
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Customer_ID</label>
                            <div class="col-md-10">
                                <input name="customer_id" type="text" class="form-control" value="{{ roombooking.customer_id }}" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Room_ID</label>
                            <div class="col-md-10">
                                <input name="room_id" type="text" class="form-control" value="{{ roombooking.room_id }}" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Check In Date</label>
                            <div class="col-md-10">
                                <input name="check_in_date" type="text" class="form-control" value="{{ roombooking.check_in_date }}" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Check Out Date</label>
                            <div class="col-md-10">
                                <input name="check_out_date" type="text" class="form-control" value="{{ roombooking.check_out_date }}" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Status</label>
                            <div class="col-md-10">
                                <input name="status" type="text" class="form-control" value="{{ roombooking.status }}" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Max Occupancy</label>
                            <div class="col-md-10">
                                <input name="total_amount" type="text" class="form-control" value="{{ roombooking.total_amount }}" required>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" >Xác nhận</button>
                            <button type="submit"><a href="/admin/roombooking">Hủy</a></button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container-fluid -->

    </div>
    <!-- end content -->
{% endblock %}